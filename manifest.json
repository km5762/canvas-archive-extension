{
  "manifest_version": 3,
  "name": "Canvas Archiver",
  "description": "Base Level Extension",
  "version": "1.0",
  "permissions": ["downloads", "declarativeContent", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
